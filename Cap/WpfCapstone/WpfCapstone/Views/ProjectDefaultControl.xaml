<UserControl x:Class="WpfCapstone.Views.ProjectDefaultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:WpfCapstone.Views"
             xmlns:viewmodels="clr-namespace:WpfCapstone.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Width="70" Height="20" Fill="CadetBlue" VerticalAlignment="Top"/>
        <Button Command="{Binding SetProjectSelect}"
                Background="DeepPink"
                Height="50"
                Width="50"/>
        <Label Content="{Binding EntryListVM.SelectedProject.Title}"
               Grid.Row="1"
               Background="Aquamarine"/>

    </Grid>
</UserControl>
