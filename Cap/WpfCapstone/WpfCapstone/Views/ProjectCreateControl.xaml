<UserControl x:Class="WpfCapstone.Views.ProjectCreateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCapstone.Views"
             xmlns:viewmodels="clr-namespace:WpfCapstone.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:ProjectListViewModel/>
    </UserControl.DataContext>
    
    <StackPanel Background="AliceBlue">
        <Label Content="Create Project"/>
        <TextBlock Text="Project Title:"/>
        <TextBox Text="{Binding InputProject.Title, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Cover Image:"/>
        <TextBox Text="{Binding InputProject.CoverImage, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Submit" Command="{Binding AddProjectCommand}"/>
        
        

    </StackPanel>
</UserControl>
