<Window x:Class="WpfCapstone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCapstone.Views"
        xmlns:viewmodels="clr-namespace:WpfCapstone.ViewModels"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="23"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:ProjectListViewModel/>
    </Window.DataContext>
    
    
    <StackPanel Orientation="Horizontal">
        <local:ProjectCreateControl DataContext="{Binding}"/>
        <local:ProjectViewControl DataContext="{Binding}"/>
    </StackPanel>
</Window>
