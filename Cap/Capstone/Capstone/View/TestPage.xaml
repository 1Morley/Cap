<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capstone.TestPage"
             Title="TestPage">

    <HorizontalStackLayout>
        <VerticalStackLayout>
            <Button Text="Nav to Test page"
                Clicked="Test_Page_Click"
                HeightRequest="20"/>

            <Label x:Name="TestLabel"
                   Text="Test"/>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Button Text="Open File Explorer" 
                    Clicked="Test_Click"/>

            <Button Text="Get File From Path"
                    Clicked="Test_File_Path"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Entry x:Name="EntryLink" 
                   Text="https://www.youtube.com"/>
            <Button Text="Open Link" 
                    Clicked="Test_Link_Open"/>
        </VerticalStackLayout>

    </HorizontalStackLayout>
</ContentPage>