<Application x:Class="WPFCap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFCap"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/ResourceDictionary/StyleVariables.xaml"/>

                <ResourceDictionary Source="/Views/ResourceDictionary/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/RectangleStyles.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/BorderStyles.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/LabelStyles.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/TextBlockStyles.xaml"/>


                <ResourceDictionary Source="/Views/ResourceDictionary/DataTemplateDictionary.xaml"/>
                <ResourceDictionary Source="/Views/ResourceDictionary/ObjectProviderDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
