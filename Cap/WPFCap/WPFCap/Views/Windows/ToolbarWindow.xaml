<UserControl x:Class="WPFCap.Views.Windows.ToolbarWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCap.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Button Content="Project Creation"
                    Command="{Binding ToggleAddPrompt}"/>

        <Button Content="Entry Creation"
                    Command="{Binding ProjectVM.EntryListVM.AddEntryPrompt}"/>

        <Button Content="Entry Select" 
                    Command="{Binding ProjectVM.EntryListVM.SelectEntryPrompt}"  />
        <Button Content="Exit" 
                    Command="{Binding ProjectVM.EntryListVM.SelectEntryPrompt}"  />

    </StackPanel>
</UserControl>
