<UserControl x:Class="WPFCap.Views.Controls.ProjectDefaultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCap.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Button Width="100"
                Height="100"
                Command="{Binding ToggleSelectPrompt}">
            <Button.Background>
                <ImageBrush ImageSource="{Binding ProjectVM.Project.CoverImage.Image}"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
