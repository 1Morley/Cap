<UserControl x:Class="WPFCap.Views.Controls.EntryCreateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCap.Views.Controls"
             xmlns:view="clr-namespace:WPFCap.ViewModels"
             xmlns:enum="clr-namespace:WPFCap.Models.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel>
            <Label Content="CREATE ENTRY"/>
            <StackPanel DataContext="{Binding InputEntry}">
                <TextBox Text="{Binding Title}"/>
                <TextBox Text="{Binding EntryNotes}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Normal"
                        Command="{Binding UpdateEntryFileType}"
                        CommandParameter="{x:Static enum:EntryFileTypes.NORMAL}"/>
                <Button Content="Local File"
                        Command="{Binding UpdateEntryFileType}"
                        CommandParameter="{x:Static enum:EntryFileTypes.LOCAL_FILE}"/>
            </StackPanel>
        </StackPanel>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Command="{Binding AddEntryCommand}"
                Content="Submit"/>
        
    </Grid>
</UserControl>
