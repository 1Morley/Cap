<UserControl x:Class="WPFCap.Views.Controls.DefaultProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCap.Views.Controls"
             xmlns:viewmodel="clr-namespace:WPFCap.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewmodel:WindowSelectViewModel x:Key="WindowVM"/>
    </UserControl.Resources>
    <Grid>
        <Button Margin="10,5"
                Style="{StaticResource Profile}"
                DataContext="{Binding ChosenProjectVM.SelectedProject}"
                Command="{Binding Source={StaticResource WindowVM}, Path=ToggleDisplayProjectSelect}">
            <Button.Background>
                <ImageBrush ImageSource="{Binding CoverImage.Image}"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
