<UserControl x:Class="WPFCap.Views.Controls.DefaultProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCap.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Height="80"
                   Margin="10,0"
                   DataContext="{Binding ChosenProjectVM.SelectedProject}">
            <Rectangle.Fill>
                <ImageBrush ImageSource="{Binding CoverImage}"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
