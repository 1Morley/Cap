<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ListNormalEntryTemplate">
        <StackPanel>
            <Label Content="NORMAL ENTRY" Style="{DynamicResource SmallLabel}"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Title}" Style="{DynamicResource SmallLabel}"/>

                <Button Content="x" 
                                Style="{DynamicResource EqualSides}"
                                Command="{Binding DataContext.DeleteEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Id}"/>

            </StackPanel>
            <TextBlock Text="{Binding EntryNotes}"/>
        </StackPanel>
    </DataTemplate>
    
    <DataTemplate x:Key="ListLocalFileEntryTemplate">
        <StackPanel>
            <Label Content="LOCAL FILE" Style="{DynamicResource SmallLabel}"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Title}" Style="{DynamicResource SmallLabel}"/>

                <Button Content="x" 
                                Style="{DynamicResource EqualSides}"
                                Command="{Binding DataContext.DeleteEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Id}"/>
            </StackPanel>
            <TextBlock Text="{Binding EntryNotes}"/>
            <Button Content="Open"
                    Command="{Binding OpenCommand}"/>
        </StackPanel>
    </DataTemplate>


    <DataTemplate x:Key="ListProjectModelTemplate">
        <Grid  Margin="5">
            <StackPanel Margin="5,10">
                <Rectangle Height="80" Width="80"
                                       Margin="10,0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{Binding CoverImage}"/>
                    </Rectangle.Fill>
                </Rectangle>


                <Label Style="{DynamicResource SmallLabel}" 
                                   Content="{Binding Title}" 
                                   HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Background="#7FFF4A4A"
                                CommandParameter="{Binding Id}"
                                Command="{Binding DataContext.DeleteProjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Visibility="{Binding DataContext.DeleteAvailibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <Button Background="#7F7184FF"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}"
                                Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Visibility="{Binding DataContext.SelectAvailibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>


        </Grid>
    </DataTemplate>
</ResourceDictionary>