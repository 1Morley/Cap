<UserControl x:Class="WPFCap.Views.MiniControls.PictureSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:control="clr-namespace:WPFCap.Views.MiniControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}">
            <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding SelectedItem}"/>
                </Button.Background>
            </Button>
        </Grid>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding ShownList}"
                      Margin="10,0,10,10" AlternationCount="{Binding GetAmountPerPage}"
                      >
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}"
                            Margin="3,6,3,0"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}"
                            Command="{Binding DataContext.SelectItemCommand, 
                                      RelativeSource={RelativeSource AncestorType=UserControl}}">

                        <Button.Background>
                            <ImageBrush ImageSource="{Binding}"/>
                        </Button.Background>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <control:PageSwitchControl Grid.Row="1"/>

    </Grid>
</UserControl>
