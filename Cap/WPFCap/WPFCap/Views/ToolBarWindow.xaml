<UserControl x:Class="WPFCap.Views.ToolBarWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:WPFCap.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:WindowSelectViewModel/>
    </UserControl.DataContext>
    <Border Style="{StaticResource WindowThing}">
        <StackPanel>
            <Button Content="Project Creation"
                    Command="{Binding ToggleDisplayProjectCreate}"/>

            <Button Content="Entry Creation"
                    Command="{Binding ToggleDisplayEntryCreate}"/>

            <Button Content="Entry Select"
                    Command="{Binding ToggleDisplayEntrySelect}"/>

        </StackPanel>
    </Border>
</UserControl>
