<Window x:Class="WPFCap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WPFCap.Views"
        xmlns:viewmodel="clr-namespace:WPFCap.ViewModels"
        PreviewMouseDown="Window_PreviewMouseDown">
    <Window.DataContext>
        <viewmodel:ProjectListViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Button Content="egg" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
        <views:FocusWindow
            Width="550"
            DataContext="{Binding}"
            VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <views:ProjectWindow VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <views:EntryListWindow
            DataContext="{Binding ChosenProjectVM}"
            VerticalAlignment="Center" HorizontalAlignment="Left"/>

        <!--<views:SelectEntryWindow
            DataContext="{Binding ChosenProjectVM}"
            VerticalAlignment="Center" HorizontalAlignment="Right"/>-->
    </Grid>
</Window>
